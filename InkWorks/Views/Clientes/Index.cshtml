@model IEnumerable<Cliente>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Clientes</h1>
        <p>não esquecer - esta rota será protegida</p>
        <div class="d-flex w-50">
            <div class="input-group ">
            </div>
            <a class="btn btn-outline-success w-75" asp-action="Adicionar"><i class="bi bi-file-earmark-plus"></i> Novo Cliente</a>
        </div>
    </div>

    <table id="Clientes" class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Morada</th>
                <th scope="col">Ano de Nascimento</th>
                <th scope="col">Telefone</th>
                <th scope="col">Email</th>
                <th scope="col">opções</th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                foreach (var cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.ClienteId</th>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Morada</td>
                        <td>@cliente.AnoNascimento</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.Email</td>
                        <td class="d-flex justify-content-end gap-2">
                            <a class="btn btn-secondary" title="Detalhes" asp-controller="Clientes" asp-action="Detalhes" asp-route-id="@cliente.ClienteId"><i class="bi bi-three-dots"></i></a>
                            <a class="btn btn-outline-success" title="Adicionar Trabalho a este cliente" asp-controller="Trabalhos" asp-action="Adicionar" asp-route-ClienteId="@cliente.ClienteId"><i class="bi bi-file-earmark-plus"></i></a>
                            <a class="btn btn-outline-warning" title="Editar dados de cliente" asp-controller="Clientes" asp-action="Editar" asp-route-id="@cliente.ClienteId"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-outline-danger" title="Remover cliente" asp-controller="Clientes" asp-action="Eliminar" asp-route-id="@cliente.ClienteId"><i class="bi bi-trash3"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="m-lg-5"></div>
</div>
