@model IEnumerable<Sessao>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Sessões</h1>
        <div class="d-flex w-50">
            <div class="input-group ">
            </div>
            
        </div>
    </div>

    <table id="Sessoes" class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Título</th>
                <th scope="col">Data de Início</th>
                <th scope="col">Dta de final</th>
                <th scope="col">Trabalho</th>
                <th scope="col">Horas</th>
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                foreach (var sessao in Model)
                {
                    <tr>
                        <th scope="row">@sessao.Id</th>
                        <td>@sessao.Titulo</td>
                        <td>@sessao.DataInicio</td>
                        <td>@sessao.DataFinal</td>
                        <td>@sessao.Trabalho.Titulo</td>
                        <td>@(sessao.DataFinal - sessao.DataInicio)</td>
                        
                        <td class="d-flex justify-content-end gap-2">
                            
                            
                            <a class="btn btn-outline-warning" title="Aterar sessão" asp-controller="Sessoes" asp-action="Editar" asp-route-id="@sessao.Id"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-outline-danger" title="Remover sessão" asp-controller="Sessoes" asp-action="Eliminar" asp-route-id="@sessao.Id"><i class="bi bi-trash3"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="m-lg-5"></div>
</div>