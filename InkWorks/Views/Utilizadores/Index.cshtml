@model IEnumerable<Utilizador>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Utilizadores</h1>
        <div class="d-flex w-50">
            <div class="input-group ">
            </div>
            <a class="btn btn-outline-success w-75" asp-action="Adicionar"><i class="bi bi-file-earmark-plus"></i> Novo Utilizador</a>
        </div>
    </div>

    <table id="Utilizadores" class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Perfil</th>
                <th scope="col">Data de Criação</th>
                <th scope="col">Última Alteração</th>
                <th scope="col">opções</th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.Nome</td>
                        <td>@user.Email</td>
                        <td>@user.Perfil</td>
                        <td>@user.DataCriacao</td>
                        <td>@user.DataAlteracao</td>
                        <td class="d-flex justify-content-end gap-2">
                            <a class="btn btn-outline-secondary" title="Detalhes" asp-controller="Utilizadores" asp-action="Detalhes" asp-route-id="@user.Id"><i class="bi bi-three-dots"></i></a>
                            <a class="btn btn-outline-warning" title="Editar Utilizador" asp-controller="Utilizadores" asp-action="Editar" asp-route-id="@user.Id"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-outline-danger" title="Remover Utilizador" asp-controller="Utilizadores" asp-action="Eliminar" asp-route-id="@user.Id"><i class="bi bi-trash3"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="m-lg-5"></div>
</div>
