@model Utilizador

@{
    ViewData["title"] = "Apagar Utilizador";
}


<div class="container d-flex justify-content-center align-items-center py-4">
    <div class="bg-dark text-white p-4 rounded">
        <h1 class="display-5 mb-4">Remover Utilizador</h1>

       <h3 class="text-danger">Tem a certeza que quer Remover o utilizador</h3>
        <h3 class="text-danger">@Model.Nome?</h3>

       <p>O acesso será removido permanentemente</p>

        <form method="post" asp-controller="Utilizadores" asp-action="Eliminar">
            
            <input asp-for="Id" hidden />
            <button type="submit" class="btn btn-danger">Remover</button>
            <a class="btn btn-outline-light" asp-controller="Utilizadores" asp-action="Index">Voltar</a>
        </form>
       

    </div>
</div>