@model Utilizador
@using InkWorks.Enums;

@{
    ViewData["title"] = "Editar Utilizador";
}


<div class="container d-flex justify-content-center align-items-center py-4">
    <div class="bg-dark text-white p-4 rounded">
        <h1 class="display-5 mb-4">Editar Utilizador</h1>

        <form method="post" asp-controller="Utilizadores" asp-action="Editar" class="mt-2">
            
            <input type="text" class="form-control" asp-for="Id" value="@Model.Id" id="Nome" hidden>
                
            <div class="mb-3">
                <label for="Nome" class="form-label">Nome:</label>
                <input type="text" class="form-control" asp-for="Nome" id="Nome" required>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Email" class "form-label">Email:</label>
                <input type="text" class="form-control" asp-for="Email" id="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Perfil" class="form-label">Perfil:</label>
                <select asp-for="Perfil" class="form-control">
                    @foreach (var perfil in Enum.GetValues(typeof(PerfilEnum)))
                    {
                        <option value="@perfil">@perfil</option>
                    }
                </select>
                <span asp-validation-for="Perfil" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password:</label>
                <input type="password" class="form-control" asp-for="Password" id="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <input asp-for="DataCriacao" type="hidden" value="@DateTime.Now" />
            <input asp-for="DataAlteracao" type="hidden" value="@DateTime.Now" />

            <button type="submit" class="btn btn-outline-success">Guardar</button>
            <a class="btn btn-outline-light" asp-action="Index">Voltar</a>
        </form>

    </div>
</div>